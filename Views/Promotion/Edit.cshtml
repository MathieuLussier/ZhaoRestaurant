@model tp1_restaurant.Models.Promotion

@{
	ViewData["Title"] = "Modification";
}

<div class="section" data-aos="fade-up">
	<div class="container">
		<div class="row section-heading justify-content-center mb-5">
			<div class="col-md-8 text-center">
				<h2 class="heading mb-3">Modification d'une promotion</h2>
			</div>
		</div>

		<form asp-action="Edit" asp-controller="Promotion" method="post">
			<div class="form-row">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				@Html.HiddenFor(m => m.PromotionId)
				<div class="form-group col-md-6">
					<label asp-for="TypePromotion" class="control-label"></label>
					<select asp-for="TypePromotion" asp-items="Html.GetEnumSelectList<TypePromotion>()" class="form-control"></select>
					<span asp-validation-for="TypePromotion" class="text-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="TauxApplicable" class="control-label"></label>
					<input asp-for="TauxApplicable" class="form-control" />
					<span asp-validation-for="TauxApplicable" class="text-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="DateDebut" class="control-label"></label>
					<input asp-for="DateDebut" class="form-control" />
					<span asp-validation-for="DateDebut" class="text-danger"></span>
				</div>
				<div class="form-group col-md-6">
					<label asp-for="DateFin" class="control-label"></label>
					<input asp-for="DateFin" class="form-control" />
					<span asp-validation-for="DateFin" class="text-danger"></span>
				</div>
                <div class="form-group col-md-12">
					<label asp-for="DescriptionPromotion" class="control-label"></label>
					<textarea asp-for="DescriptionPromotion" rows="4" class="form-control"></textarea>
					<span asp-validation-for="DescriptionPromotion" class="text-danger"></span>
				</div>
				<div class="form-group col-md-12">
					<input type="submit" value="Sauvegarder" class="btn btn-primary" />
				</div>
			</div>
		</form>

		<div>
			<a asp-action="Index">Retour Ã  la liste</a>
		</div>
	</div>
</div> <!-- .section -->
