@model tp1_restaurant.Models.Promotion

@{
	ViewData["Title"] = "Details";
}

<div class="section" data-aos="fade-up">
	<div class="container">
		<div class="row section-heading justify-content-center mb-5">
			<div class="col-md-8 text-center">
				<h2 class="heading mb-3">Détails d'une promotion</h2>
			</div>
		</div>

		<div>

			<dl class="row">
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.Id)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Id)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.TypePromotion)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.TypePromotion)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.TauxApplicable)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.TauxApplicable)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.DateDebut)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.DateDebut)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.DateFin)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.DateFin)
				</dd>
				<dt class="col-sm-2">
					@Html.DisplayNameFor(model => model.DescriptionPromotion)
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.DescriptionPromotion)
				</dd>
			</dl>
		</div>
		<div>
			@Html.ActionLink("Modifier", "Edit", new { id = Model.Id }) |
			<a asp-action="Index">Retour à la liste</a>
		</div>
	</div>
</div> <!-- .section -->
